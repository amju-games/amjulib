
MACHDEP =  -arch i386 -DMACOSX -DXP_MACOSX -D__i386__ 
# __i386__ for intel mac
# XP_MACOSX for libpng
# AMJU_USE_GLUT for window creation etc

include $(AMJULIB_MAC_SCRIPT_PATH)/base_rules


# j.c.
BUILDEXE = @$(LD)  $^ $(LDFLAGS) $(LIBPATHS) $(LIBS) -o $@

BUILDSTATICLIB = echo "Building " $@; rm -rf $@; libtool -static -o $@

